{
  "name": "trello_card_action",
  "description": "Выполняет действия над карточками Trello: создание, получение, обновление, удаление.",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "description": "Тип действия над карточкой.",
        "enum": ["create", "get", "update", "delete"]
      },
      "idList": {
        "type": "string",
        "description": "ID списка. Обязателен для действия 'create'."
      },
      "idCard": {
        "type": "string",
        "description": "ID карточки. Обязателен для действий 'get', 'update', 'delete'."
      },
      "name": {
        "type": "string",
        "description": "Название карточки."
      },
      "desc": {
        "type": "string",
        "description": "Описание карточки."
      },
      "pos": {
        "type": ["string", "integer"],
        "description": "Позиция карточки: 'top', 'bottom' или число."
      },
      "due": {
        "type": "string",
        "description": "Срок выполнения (ISO‑дата)."
      },
      "start": {
        "type": "string",
        "description": "Дата начала (ISO‑дата)."
      },
      "idMembers": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Список ID участников."
      },
      "idLabels": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Список ID меток."
      }
    },
    "required": ["action"]
  }
}
