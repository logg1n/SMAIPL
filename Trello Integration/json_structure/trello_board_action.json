{
  "name": "trello_board_action",
  "description": "Выполняет действия над досками Trello: создание, получение, обновление, удаление.",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "description": "Тип действия над доской.",
        "enum": ["create", "get", "update", "delete"]
      },
      "idBoard": {
        "type": "string",
        "description": "ID доски. Обязателен для действий 'get', 'update', 'delete'."
      },
      "name": {
        "type": "string",
        "description": "Имя новой доски. Используется при создании."
      },
      "new_name": {
        "type": "string",
        "description": "Новое имя доски. Используется при обновлении."
      },
      "desc": {
        "type": "string",
        "description": "Описание доски. Используется при создании и обновлении."
      },
      "prefs_permissionLevel": {
        "type": "string",
        "description": "Уровень доступа к доске.",
        "enum": ["private", "public", "org"]
      },
      "defaultLists": {
        "type": "string",
        "description": "Создавать стандартные списки при создании доски.",
        "enum": ["true", "false"]
      },
      "defaultLabels": {
        "type": "string",
        "description": "Создавать стандартные метки при создании доски.",
        "enum": ["true", "false"]
      },
      "fields": {
        "type": "string",
        "description": "Список полей доски для возврата (CSV). По умолчанию: name,desc,prefs,url,shortLink."
      },
      "cards": {
        "type": "string",
        "description": "Включение карточек в ответ.",
        "enum": ["all", "open", "closed", "visible", "none"]
      },
      "lists": {
        "type": "string",
        "description": "Включение списков в ответ.",
        "enum": ["all", "open", "closed", "none"]
      },
      "labels": {
        "type": "string",
        "description": "Включение меток в ответ.",
        "enum": ["all", "none"]
      },
      "members": {
        "type": "string",
        "description": "Включение участников в ответ.",
        "enum": ["all", "owners", "admins", "normal", "none"]
      },
      "organization": {
        "type": ["string", "boolean"],
        "description": "Включить информацию об организации в ответ."
      },
      "actions": {
        "type": "string",
        "description": "Включение действий: 'all' или CSV-строка типов (например: commentCard,updateCard:idList)."
      },
      "powerUps": {
        "type": "string",
        "description": "Состояние Power-Ups.",
        "enum": ["all", "enabled", "none"]
      }
    },
    "required": ["action"]
  }
}
