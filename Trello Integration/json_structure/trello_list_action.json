{
  "name": "trello_list_action",
  "description": "Выполняет действия над списками Trello: создание, получение, обновление.",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "description": "Тип действия над списком.",
        "enum": ["create", "get", "update"]
      },
      "idBoard": {
        "type": "string",
        "description": "ID доски. Обязателен для 'create', используется для перемещения при 'update'."
      },
      "nameList": {
        "type": "string",
        "description": "Имя нового списка. Обязателен для 'create'."
      },
      "idList": {
        "type": "string",
        "description": "ID списка. Обязателен для 'get' и 'update'."
      },
      "newNameList": {
        "type": "string",
        "description": "Новое имя списка. Используется при 'update'."
      },
      "closed": {
        "type": "boolean",
        "description": "Архивировать (true) или разархивировать (false) список. Используется при 'update'."
      }
    },
    "required": ["action"]
  }
}
